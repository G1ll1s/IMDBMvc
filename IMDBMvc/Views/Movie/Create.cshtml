@model CreateVM

<h1>Add Movie</h1>

<form asp-controller="movie" asp-action="create" >
    <label asp-for="SelectedGenreId"></label>
    <select asp-for="SelectedGenreId" asp-items="Model.Genres"></select>
    <span asp-validation-for="SelectedGenreId"></span>

    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>

    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
    <span asp-validation-for="Description"></span>

    <label asp-for="Rating"></label>
    <input asp-for="Rating" type="number" />
    <span asp-validation-for="Rating"></span>

    <label asp-for="ImageUrl"></label>
    <input asp-for="ImageUrl" type="url"/>
    <span asp-validation-for="ImageUrl"></span>

    <input type="submit" value="Create" />
</form>


@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}